<script language="javascript">
function check(form) {
if (form.userid.value === "user" && form.pswrd.value === "password") {
   window.open('https://kushhhhh.github.io/details-page.html')
}
else {
   println("Error! Password or Username is incorrect... try again!")
}
}
</script>
